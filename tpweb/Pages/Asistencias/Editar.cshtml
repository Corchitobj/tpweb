@page
@model tpweb.Pages.Asistencias.EditarModel

<h2>Editar asistencia - Materia @Model.MateriaNombre</h2>

<form method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Alumno</th>
                <th>Presente</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aa in Model.AsistenciasAlumnos)
            {
                <tr>
                    <td>@aa.Alumno.Nombre @aa.Alumno.Apellido</td>
                    <td>
                        <input type="checkbox" name="presentes" value="@aa.AlumnoId" @(aa.Presente ? "checked" : "") />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">Guardar cambios</button>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}