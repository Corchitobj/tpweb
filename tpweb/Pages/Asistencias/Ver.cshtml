@page
@model tpweb.Pages.Asistencias.VerModel

<h2>Historial de Asistencias - @Model.MateriaNombre</h2>

@if (!Model.Asistencias.Any())
{
    <div class="alert alert-info">
        No se registraron asistencias para esta materia.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr>
                <th>Fecha</th>
                <th>Presentes</th>
                <th>Totales</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var asistencia in Model.Asistencias)
            {
                <tr>
                    <td>@asistencia.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@Model.GetPresentes(asistencia.Id)</td>
                    <td>@Model.GetTotales(asistencia.Id)</td>
                    <td>
                        <a asp-page="/Asistencias/Editar" asp-route-id="@asistencia.Id" class="btn btn-outline-warning btn-sm">
                            Editar
                        </a>
                        <a asp-page="/Asistencias/Detalle" asp-route-id="@asistencia.Id" class="btn btn-outline-info btn-sm ms-1">
                            Ver detalle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
