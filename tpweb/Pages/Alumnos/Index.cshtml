@page
@model tpweb.Pages.Alumnos.IndexModel

@{
    ViewData["Title"] = "Listado de Alumnos";
}

<h2 class="mb-4">Listado de Alumnos</h2>

<p>
    <a asp-page="Create" class="btn btn-primary mb-3">Registrar Alumno</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>DNI</th>
            <th>Mail</th>
            <th>Usuario</th>
            <th style="width: 180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Alumno)
        {
            <tr>
                <td>@item.Apellido</td>
                <td>@item.Nombre</td>
                <td>@item.Dni</td>
                <td>@item.Mail</td>
                <td>@item.Usuario</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdAlumno" class="btn btn-outline-warning btn-sm">Editar</a>
                    <a asp-page="./Details" asp-route-id="@item.IdAlumno" class="btn btn-outline-info btn-sm ms-1">Detalles</a>
                    <a asp-page="./Delete" asp-route-id="@item.IdAlumno" class="btn btn-outline-danger btn-sm ms-1">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}