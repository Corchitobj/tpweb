@model tpweb.Pages.Usuarios.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].UsuarioNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Contraseña)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario[0].Rol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Usuario) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contraseña)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol.IdRol)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IdUsuario">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.IdUsuario">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IdUsuario">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
