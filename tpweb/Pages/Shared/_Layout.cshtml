﻿
@using Microsoft.AspNetCore.Http
@{
    var rol = Context.Session.GetString("Rol");
    var usuarioNombre = Context.Session.GetString("UsuarioNombre");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] OWLEDGE </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tpweb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">tpweb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Inicio</a>
                        </li>
                        @if (rol == "Administrador" || rol == "Preceptor")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Alumnos/Index">Alumnos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Usuarios/Index">Usuarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Tareas/Index">Tareas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Asistencias/Index">Asistencias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Materias/Index">Materias</a>
                            </li>
                            <li class="nav-item">
                              <a class="nav-link text-white" asp-area="" asp-page="/Cursos/Index">Cursos</a>
                            </li>
                        }
                        else if (rol == "Alumno")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Asistencias/Index">Mis Asistencias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Materias/Index">Mis Materias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Tareas/Index">Mis Tareas</a>
                            </li>
                        }
                        else if (rol == "Docente")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/frmCurso">Cursos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Materias/Index">Materias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Alumnos/Index">Alumnos</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(rol))
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-white me-2">Hola, @usuarioNombre (@rol)</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Logout">Cerrar sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Registrarse">Registrarse</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted bg-light">
        <div class="container">
            &copy; 2025 - OWLEDGE - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>