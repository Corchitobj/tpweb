@page
@model tpweb.Pages.Materias.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Materia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Materia.Nombre" class="control-label"></label>
                <input asp-for="Materia.Nombre" class="form-control" />
                <span asp-validation-for="Materia.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Materia.CursoId" class="control-label">Curso</label>
                <select asp-for="Materia.CursoId" class="form-control" asp-items="ViewBag.CursoId">
                    <option value="">-- Selecciona un curso --</option>
                </select>
                <span asp-validation-for="Materia.CursoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Materia.DocenteId" class="control-label">Docente</label>
                <select asp-for="Materia.DocenteId" class="form-control" asp-items="ViewBag.DocenteId">
                    <option value="">-- Selecciona un docente --</option>
                </select>
                <span asp-validation-for="Materia.DocenteId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Crear</button>
            <a asp-page="./Index" class="btn btn-secondary">Volver</a>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
