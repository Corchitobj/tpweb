@page
@model tpweb.Pages.Materias.IndexModel

@{
    ViewData["Title"] = "Listado de Materias";
}

<h2 class="mb-4">Listado de Materias</h2>

<p>
    <a asp-page="Create" class="btn btn-primary mb-3">Registrar Materia</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>Nombre</th>
            <th>Curso</th>
            <th>Docente</th>
            <th style="width: 180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Materia)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Curso?.Nombre</td>
                <td>@(item.Docente != null ? item.Docente.Nombre + " " + item.Docente.Apellido : "Sin docente")</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdMateria" class="btn btn-outline-warning btn-sm">Editar</a>
                    <a asp-page="./Details" asp-route-id="@item.IdMateria" class="btn btn-outline-info btn-sm ms-1">Detalles</a>
                    <a asp-page="./Delete" asp-route-id="@item.IdMateria" class="btn btn-outline-danger btn-sm ms-1">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}