@page "{id:int}"
@model tpweb.Pages.Tareas.EditModel

@{
    ViewData["Title"] = "Editar Tarea";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Editar Tarea de @Model.Materia?.Nombre
                    </h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="Tarea.Id" />
                        <input type="hidden" asp-for="Tarea.MateriaId" />

                        <!-- Título -->
                        <div class="mb-3">
                            <label asp-for="Tarea.Titulo" class="form-label fw-bold">Título</label>
                            <input asp-for="Tarea.Titulo"
                                   class="form-control"
                                   placeholder="Ingrese el título de la tarea"
                                   maxlength="200" />
                            <span asp-validation-for="Tarea.Titulo" class="text-danger small"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Tarea.Descripcion" class="form-label fw-bold">Descripción</label>
                            <textarea asp-for="Tarea.Descripcion"
                                      class="form-control"
                                      rows="5"
                                      placeholder="Ingrese la descripción de la tarea"
                                      maxlength="1000"></textarea>
                            <span asp-validation-for="Tarea.Descripcion" class="text-danger small"></span>
                        </div>

                        <!-- Fecha de Entrega -->
                        <div class="mb-3">
                            <label asp-for="Tarea.FechaEntrega" class="form-label fw-bold">Fecha de Entrega</label>
                            <input asp-for="Tarea.FechaEntrega"
                                   type="date"
                                   class="form-control"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="Tarea.FechaEntrega" class="text-danger small"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="/Tareas/Index" asp-route-materiaId="@Model.Tarea.MateriaId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
