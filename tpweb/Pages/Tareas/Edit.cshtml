            </div>
            <div class="form-group">
                <label asp-for="Tarea.FechaEntrega" class="control-label"></label>
                <input asp-for="Tarea.FechaEntrega" class="form-control" />
                <span asp-validation-for="Tarea.FechaEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarea.MateriaId" class="control-label"></label>
                <select asp-for="Tarea.MateriaId" class="form-control" asp-items="ViewBag.MateriaId"></select>
                <span asp-validation-for="Tarea.MateriaId" class="text-danger"></span>
