    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tarea</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tarea.Id" />
            <div class="form-group">
                <label asp-for="Tarea.Titulo" class="control-label"></label>
                <input asp-for="Tarea.Titulo" class="form-control" />
