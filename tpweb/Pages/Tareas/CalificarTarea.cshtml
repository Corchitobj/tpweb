@page
@model tpweb.Pages.Tareas.CalificarTareaModel

@{
    ViewData["Title"] = "Calificar Tarea";
}

<div class="container mt-4">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.TareaAlumno != null)
    {
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">@Model.TareaAlumno.Tarea.Titulo</h3>
            </div>
            <div class="card-body">
                <p><strong>Alumno:</strong> @Model.TareaAlumno.Alumno.Nombre @Model.TareaAlumno.Alumno.Apellido</p>
                <p><strong>Descripción:</strong> @Model.TareaAlumno.Tarea.Descripcion</p>
                <p><strong>Fecha de entrega:</strong> @Model.TareaAlumno.Tarea.FechaEntrega.ToString("dd/MM/yyyy")</p>
                <p><strong>Respuesta del alumno:</strong></p>
                <div class="border p-3 mb-3">@Model.TareaAlumno.Respuesta</div>

                <form method="post">
                    <input type="hidden" asp-for="TareaId" />
                    <input type="hidden" asp-for="AlumnoId" />

                    <div class="mb-3">
                        <label asp-for="Nota" class="form-label fw-bold">Calificación</label>
                        <input asp-for="Nota" class="form-control" min="0" max="10" step="0.1" />
                        <span asp-validation-for="Nota" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Guardar calificación
                    </button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">No se encontró la tarea o la respuesta del alumno.</div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
