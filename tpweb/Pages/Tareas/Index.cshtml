@page "{MateriaId:int}"
@model tpweb.Pages.Tareas.IndexModel

@{
    ViewData["Title"] = "Tareas - " + (Model.Materia?.Nombre ?? "Materia");
}

<h2>Tareas de @Model.Materia?.Nombre</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div id="success-message" class="alert alert-success fade-message">
        @TempData["SuccessMessage"]
    </div>

    <script>
        setTimeout(function() {
            var msg = document.getElementById("success-message");
            if (msg) {
                msg.style.transition = "opacity 1s ease-out";
                msg.style.opacity = "0";
                setTimeout(function() {
                    msg.remove();
                }, 1000); 
            }
        }, 2500); 
    </script>
}

<table class="table table-bordered table-hover mt-3">
    <thead class="table-primary">
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Fecha de Entrega</th>
            <th>Estado</th>
            <th style="width: 220px;">Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model.Tareas)
        {
            <tr>
                <td>@tarea.Titulo</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.FechaEntrega.ToString("dd/MM/yyyy")</td>
                <td>@(tarea.Archivada ? "Archivada" : "Activa")</td>
                <td>
                    <a asp-page="/Tareas/Edit" asp-route-id="@tarea.Id" class="btn btn-outline-warning btn-sm">
                        Editar
                    </a>

                    <form method="post" asp-page-handler="ToggleArchive" class="d-inline">
                        <input type="hidden" name="tareaId" value="@tarea.Id" />
                        <button type="submit"
                                class="btn btn-outline-secondary btn-sm"
                                onclick="return confirm('¿Está seguro que desea @(tarea.Archivada ? "desarchivar" : "archivar") esta tarea?');">
                            @(tarea.Archivada ? "Desarchivar" : "Archivar")
                        </button>
                    </form>
                    <a asp-page="/Tareas/Corregir" asp-route-tareaId="@tarea.Id" class="btn btn-outline-primary btn-sm">
                        Corregir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Materias/Details" asp-route-id="@Model.MateriaId" class="btn btn-secondary mt-3">
    Volver a Materia
</a>

