@page
@model tpweb.Pages.Tareas.IndexModel

@{
    ViewData["Title"] = "Listado de Tareas";
}

<h2 class="mb-4">Listado de Tareas</h2>

<p>
    <a asp-page="Create" class="btn btn-primary mb-3">Registrar Tarea</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>Título</th>
            <th>Descripción</th>
            <th>Fecha de Entrega</th>
            <th>Materia</th>
            <th style="width: 180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tarea)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Descripcion</td>
                <td>@item.FechaEntrega.ToString("dd/MM/yyyy")</td>
                <td>@item.Materia?.Nombre</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Editar</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm ms-1">Detalles</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm ms-1">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}