            <div class="form-group">
                <label asp-for="Asistencia.MateriaId" class="control-label"></label>
                <select asp-for="Asistencia.MateriaId" class="form-control" asp-items="ViewBag.MateriaId"></select>
                <span asp-validation-for="Asistencia.MateriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

